<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Nullable>enable</Nullable>
    <RootNamespace>Zenseless.RenderToolbox</RootNamespace>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Zenseless.RenderToolbox.PluginBase</PackageId>
    <Version>0.1</Version>
    <Authors>Daniel Scherzer</Authors>
    <Company>Daniel Scherzer</Company>
    <Description>Interface for OpenTK based plugins for the RenderToolbox</Description>
    <Copyright>2021 Daniel Scherzer</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/danielscherzer/RenderToolbox</PackageProjectUrl>
    <PackageTags>OpenTK OpenGL .net plugin</PackageTags>
    <PackageReleaseNotes>Auto generated by AppVeyor</PackageReleaseNotes>
    <RepositoryUrl>https://github.com/danielscherzer/RenderToolbox</RepositoryUrl>
  </PropertyGroup>

</Project>
